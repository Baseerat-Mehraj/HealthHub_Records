@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model HealthHub_Records.Models.Reports
@{
    Layout = "_PatientLayout";
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");

    @if (!userId.HasValue)
    {
        <script>
            window.location.href = '@Url.Action("Index", "Home")';
        </script>
    }
}



<div class="container" >
    <div class="row">
   
        <div class="col-12" style="font-size:larger">
            <form method="post" enctype="multipart/form-data" asp-controller="Patient" asp-action="UploadReport">
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <label asp-for="file"></label>
                        <input type="file" asp-for="file" class="form-control" style="border:solid" />

                    </div>
                    <div class="col-12 col-sm-6">
                        <label asp-for="Title">Title</label>
                        <input type="text" asp-for="Title" class="form-control" style="border:solid" />
                    </div>
                </div>



                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" style="border:solid"></textarea>

              
                <input type="hidden" asp-for="userid"  class="form-control" style="border:solid" />

                <div class="form-group mt-1">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
