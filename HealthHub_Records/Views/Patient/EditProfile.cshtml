@model HealthHub_Records.Models.PatientRegistration

@{
    Layout = "_PatientLayout";
    ViewData["Title"] = "EditProfile";
}

<div class="row" style="font-size:larger">
    <div class="col-md-12">
        <form asp-action="EditProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="patientid" />
            <div class="form-group">
                <label asp-for="firstname" class="control-label"></label>
                <input asp-for="firstname" readonly="readonly" class="form-control" style="border:solid" />
            
            </div>
            <div class="form-group">
                <label asp-for="lastname" class="control-label"></label>
                <input asp-for="lastname" readonly="readonly" class="form-control" style="border:solid" />
              
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" style="border:solid" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="state" class="control-label"></label>
                <input asp-for="state" class="form-control" style="border:solid" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" style="border:solid" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dob" class="control-label"></label>
                <input asp-for="dob" class="form-control" readonly="readonly" style="border:solid" />
              
            </div>
            <div class="form-group">
                <label asp-for="phoneno" class="control-label"></label>
                <input asp-for="phoneno" class="form-control" style="border:solid" />
                <span asp-validation-for="phoneno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <input asp-for="gender" readonly="readonly" class="form-control" style="border:solid" />
              
            </div>
           
            <div class="form-group">
                <input type="submit" value="Edit" asp-route-id="@Model?.patientid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Patient" asp-action="PatientProfile">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
