<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hub</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hub.styles.css" asp-append-version="true" /> *@

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/navcss/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="wrapper d-flex align-items-stretch">
                <nav id="sidebar">
                    <div class="custom-menu">
                        <button type="button" id="sidebarCollapse" class="btn btn-primary">
                            <i class="fa fa-bars"></i>
                            <span class="sr-only">Toggle Menu</span>
                        </button>
                    </div>
                    <h1><a  class="logo">HealthHub_Records</a></h1>
                    <ul class="list-unstyled components mb-5">
                        <li>
                            <a asp-controller="Hospital" asp-action="HospitalDashboard"><span class="fa fa-home mr-3"></span>Dashboard</a>
                        </li>
                        <li class="active">
                            <a asp-controller="Hospital" asp-action="HospitalProfile"><span class="fa fa-user mr-3"></span>Profile</a>
                        </li>
                        <li>
                            <a asp-controller="Hospital" asp-action="SearchPatient"><span class="fa fa-sticky-note mr-3"></span>Search Patient</a>
                        </li>

                       
                        
                        <li>
                            <a asp-controller="Home" asp-action="ChangePassword"><span class="fa fa-paper-plane mr-3"></span> Change Password</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Logout"><span class="fa fa-home mr-3"></span> Logout</a>
                        </li>
                    </ul>

                </nav>

                <!-- Page Content  -->
                <div id="content" class="p-4 p-md-5 pt-5">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>



    <script src="~/navjs/jquery.min.js"></script>
    <script src="~/navjs/popper.js"></script>
    <script src="~/navjs/bootstrap.min.js"></script>
    <script src="~/navjs/main.js"></script>

    <@* script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
