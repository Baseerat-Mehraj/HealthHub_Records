@model HealthHub_Records.ViewModels.AllHospitalDetails

@{

    Layout = "_AdminLayout";
    ViewData["Title"] = "GetAllHospitals";
}

<h3><em>Hospitals</em></h3>

<table class="table table-info table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                State
            </th>
            <th>
                City
            </th>
            <th>
                Pincode
            </th>
            <th>
                PhoneNo
            </th>
            <th>
                LicienceNo
            </th>
            <th>
                Status
            </th>
          
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hospitals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pincode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.licienceno)
            </td>
                <td>
                    @item.Users.isactive
                </td>
            <td>

                    <a asp-action="Active" asp-route-id="@item.userid" class="btn btn-primary">Active</a> |

                    <a  asp-action="Inactive" asp-route-id="@item.userid" class="btn btn-danger">Block</a>
            </td>
        </tr>
}
    </tbody>
</table>
