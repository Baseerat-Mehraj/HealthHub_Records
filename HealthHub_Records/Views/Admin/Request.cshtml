@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model HealthHub_Records.ViewModels.AllUsers

@{

    Layout = "_AdminLayout";
    ViewData["Title"] = "GetAllUsers";
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");

    @if (!userId.HasValue)
    {
        <script>
            window.location.href = '@Url.Action("Index", "Home")';
        </script>
    }
}

<h3><em>Hospitals</em></h3>

<table class="table table-info table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                State
            </th>
            <th>
                City
            </th>
            <th>
                Pincode
            </th>
            <th>
                PhoneNo
            </th>
            <th>
                LicienceNo
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Hospitals)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pincode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.licienceno)
                </td>
                <td>

                    <a asp-controller="Admin" asp-action="AcceptRequest" asp-route-id="@item.userid" class="btn btn-success">Accept</a>

                </td>
            </tr>
        }
    </tbody>
</table>


