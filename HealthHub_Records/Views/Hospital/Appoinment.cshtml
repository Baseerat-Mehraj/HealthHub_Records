@model HealthHub_Records.Models.Appoinment

@{

    Layout = "_HospitalLayout";
    ViewData["Title"] = "Appoinment";
}



<h4 style="text-align:center;background-color:gray">Appoinment</h4>
<div class="row" style="font-size:larger">
    <div class="col-md-12">
        <form asp-controller="Hospital" asp-action="Appoinment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="text" asp-for="HospitalDetails" value="@ViewBag.HospitalHome" class="form-control" style="border:solid" />
            </div>
           
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" style="border:solid" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disease" class="control-label"></label>
                <input asp-for="Disease" class="form-control" style="border:solid" />
                <span asp-validation-for="Disease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" style="border:solid" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicines" class="control-label"></label>
                <input asp-for="Medicines" class="form-control" style="border:solid" />
                <span asp-validation-for="Medicines" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Advice" class="control-label"></label>
                <input asp-for="Advice" class="form-control" style="border:solid" />
                <span asp-validation-for="Advice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextAppoinment" class="control-label"></label>
                <input asp-for="NextAppoinment" class="form-control" style="border:solid" />
                <span asp-validation-for="NextAppoinment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorName" class="control-label"></label>
                <input asp-for="DoctorName" class="form-control" style="border:solid" />
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorContact" class="control-label"></label>
                <input asp-for="DoctorContact" class="form-control" style="border:solid" />
                <span asp-validation-for="DoctorContact" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="userid" value="@ViewBag.PatientId" class="form-control"/>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Hospital" asp-action="PatientD" asp-route-id="@ViewBag.PatientId" style="font-size:large">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
