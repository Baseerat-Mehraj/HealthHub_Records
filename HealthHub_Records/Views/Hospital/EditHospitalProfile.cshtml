@model HealthHub_Records.Models.HospitalRegistration

@{
    Layout = "_HospitalLayout";
    ViewData["Title"] = "EditHospitalProfile";
}

<div class="row" style="font-size:larger">
    <div class="col-md-12">
        <form asp-action="EditHospitalProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hospitalid" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" readonly="readonly" class="form-control" style="border:solid" />
               
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" style="border:solid" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="state" class="control-label"></label>
                <input asp-for="state" class="form-control" style="border:solid" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" style="border:solid" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pincode" class="control-label"></label>
                <input asp-for="pincode" class="form-control" style="border:solid" />
                <span asp-validation-for="pincode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phoneno" class="control-label"></label>
                <input asp-for="phoneno" class="form-control" style="border:solid" />
                <span asp-validation-for="phoneno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="licienceno" class="control-label"></label>
                <input asp-for="licienceno" readonly="readonly" class="form-control" style="border:solid" />
               
            </div>
          
            <div class="form-group">
                <input type="submit" value="Edit" asp-route-id="@Model?.Hospitalid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Hospital" asp-action="HospitalDashboard">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
