@model HealthHub_Records.ViewModels.ForgetPassword

@{
    ViewData["Title"] = "ForgetPassword";
}
<form method="post" asp-controller="Home" asp-action="ForgetPassword">
    <section class="vh-100" style="background-color:lightblue;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/images/forgot.png"
                                     alt="login form" style="border-radius: 1rem 0 0 1rem;padding-top:100px" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Forget Password</h5>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form2Example17" class="form-control form-control-lg" asp-for="Email" />
                                        <label class="form-label" asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="NewPassword" />
                                        <label class="form-label" asp-for="NewPassword">Password</label>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="ConfirmPassword" />
                                        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-dark btn-lg btn-block">Submit</button>
                                    </div>

                                  




                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>