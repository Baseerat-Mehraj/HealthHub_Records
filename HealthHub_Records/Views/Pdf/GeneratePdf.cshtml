@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>View PDF</title>
</head>
<body>
    <h1>View PDF</h1>
    <div>
        <embed src="@Url.Action("GeneratePdf", new { view = "true" })" width="800" height="600" type="application/pdf">
    </div>
    <p><a href="@Url.Action("GeneratePdf", new { view = "false" })" download>Download PDF</a></p>
</body>
</html>

